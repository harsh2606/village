<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_5sdp"
       android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/gray_61">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp">

                <com.temp.custom.CTextViewB
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :-"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_3sdp"/>

                <com.temp.custom.CTextViewB
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_155sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp">

        <com.temp.custom.CTextViewB
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="relationshn :-"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_3sdp"/>

                <com.temp.custom.CTextViewB
                    android:id="@+id/tvRName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_155sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp">

                <com.temp.custom.CTextViewB
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business :-"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_3sdp"/>

                <com.temp.custom.CTextViewB
                    android:id="@+id/tvBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_155sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp">

                <com.temp.custom.CTextViewB
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Birth :-"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_3sdp"/>

                <com.temp.custom.CTextViewB
                    android:id="@+id/tvDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/05/1995"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_125sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp">

                <com.temp.custom.CTextViewB
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study :-"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_3sdp"/>

                <com.temp.custom.CTextViewB
                    android:id="@+id/tvStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_155sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp">

                <com.temp.custom.CTextViewB
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number :-"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_3sdp"/>

                <com.temp.custom.CTextViewB
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VillageList"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_125sdp"
                    android:layout_marginBottom="@dimen/_3sdp"/>

            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>