<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewClickHandler"
            type="com.temp.ui.addmaindetail.viewmodel.AddMainDetailViewModel.ViewClickHandler" />

        <variable
            name="viewModel"
            type="com.temp.ui.addmaindetail.viewmodel.AddMainDetailViewModel" />

    </data>

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.addmaindetail.view.AddMainDetailActivity">

            <include
                android:id="@+id/topbar"
                layout="@layout/topbar" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_65sdp">

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Name" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtName"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Name"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Relation" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtRelation"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Relation"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Dob" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtDob"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Birthday"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />


                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Business" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtBusiness"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Business"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Study" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtStudy"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Study"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Number" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtNumber"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Business"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                   />

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Bloodgroup" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg">

                    <Spinner
                        android:id="@+id/spinnerAdd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/white"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <com.temp.custom.CTextViewB
                    style="@style/txt_main_bg_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="Add Number" />

                <com.temp.custom.CEditTextView
                    android:id="@+id/edtNumber2"
                    style="@style/txt_main_bg_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ll_add_img_bg"
                    android:hint="Enter Business"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    />
            </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <com.temp.custom.CButtonViewB
            style="@style/txt_fff_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:singleLine="true"
            android:background="@drawable/bg_continue"
            android:layout_gravity="bottom"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Add"
            android:onClick="@{(v)->viewClickHandler.onAddDetail(v)}"/>

    </FrameLayout>
</layout>